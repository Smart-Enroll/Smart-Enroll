<!-- Header Section (Smart Enroll at the top left) -->
<div class="header">
  <h1 class="brand-name">Smart Enroll</h1>
  <%= image_tag "usf_logo.png", class: "logo" %>
</div>

<!-- Sign-Up Form Section -->
<div class="form-container">
  <h2>Sign Up</h2>
  <%= form_with(url: signup_path, method: :post, local: true) do |f| %>
    <label>Email:</label>
    <%= f.email_field :email, placeholder: "Enter Your Email" %>

    <label>Full Name:</label>
    <%= f.text_field :name, placeholder: "Enter Your Full Name" %>

    <label>Password:</label>
    <%= f.password_field :password, placeholder: "Enter Your Password" %>

    <button type="submit">Sign Up</button>
  <% end %>

  <!-- Login Text -->
  <p>Already have an account? <span class="login-text">Log in</span></p>
</div>
