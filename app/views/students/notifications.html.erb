<h1 class="header">Notifications</h1>

<div class="notifications-container">
  <% if @notifications.any? %>
    <% @notifications.each do |notification| %>
      <div class="notification-card">
        <h2><%= notification[:title] %></h2>
        <p><%= notification[:body] %></p>
        <span class="timestamp"><%= notification[:created_at].strftime("%B %d, %Y at %I:%M %p") %></span>
      </div>
    <% end %>
  <% else %>
    <p class="empty-message">ðŸŽ‰ You have no notifications at this time.</p>
  <% end %>
</div>

<div class="button-container">
  <%= link_to "Back to Dashboard", dashboard_path, class: "green-button" %>
</div>

<style>
  body {
    background-color: #f4f4f4;
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 0;
    text-align: center;
  }

  .header {
    background-color: #004B2D;
    color: white;
    padding: 20px;
    margin-bottom: 30px;
  }

  .notifications-container {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 20px;
    margin-bottom: 30px;
  }

  .notification-card {
    background-color: white;
    border-left: 5px solid #004B2D;
    padding: 20px;
    width: 80%;
    max-width: 600px;
    border-radius: 8px;
    text-align: left;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
  }

  .notification-card h2 {
    margin: 0 0 10px;
    color: #004B2D;
  }

  .notification-card p {
    margin: 0 0 10px;
  }

  .timestamp {
    font-size: 0.9em;
    color: gray;
  }

  .empty-message {
    color: gray;
    font-style: italic;
    margin-top: 20px;
  }

  .button-container {
    margin-bottom: 30px;
  }

  .green-button {
    background: #004B2D;
    color: white;
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    text-decoration: none;
    font-size: 16px;
  }

  .green-button:hover {
    background: #003F26;
  }
</style>
