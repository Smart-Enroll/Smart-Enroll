<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
  }

  .container {
    width: 100%;
    height: 100vh;
    display: flex;
    flex-direction: column;
  }

  .top-banner, .bottom-banner {
    background-color: #004B2D;
    color: white;
    text-align: center;
    padding: 30px;
  }

  .main-content {
    background-color: white;
    flex-grow: 1;
    padding: 60px;
    border-radius: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    margin: 20px;
  }

  h1 {
    margin-bottom: 30px;
    font-size: 32px;
    color: #333;
  }

  .courses-table {
    width: 100%;
    border-collapse: collapse;
    margin-top: 30px;
  }

  .courses-table th, .courses-table td {
    padding: 20px;
    text-align: left;
    border: 1px solid #ddd;
    font-size: 18px;
  }

  .courses-table th {
    background-color: #f2f2f2;
    font-weight: bold;
  }

  .enroll-button, .back-button {
    padding: 15px 30px;
    font-size: 18px;
    border-radius: 4px;
    text-decoration: none;
    display: inline-block;
    cursor: pointer;
  }

  .enroll-button {
    background-color: #4CAF50;
    color: white;
    border: none;
  }

  .enroll-button:hover {
    background-color: #45a049;
  }

  .back-button {
    margin-top: 30px;
    background-color: #f44336;
    color: white;
    border: none;
  }

  .back-button:hover {
    background-color: #da190b;
  }

  .courses-table td:nth-child(5), .courses-table th:nth-child(5) {
    text-align: center;
  }

  @media (max-width: 768px) {
    .courses-table th, .courses-table td {
      padding: 15px;
      font-size: 16px;
    }

    .enroll-button, .back-button {
      padding: 12px 24px;
      font-size: 16px;
    }
  }
</style>

<div class="container">
  <div class="top-banner">
    <h2>Welcome to the Course List</h2>
  </div>

  <div class="main-content">
    <h1>All Courses</h1>

    <table class="courses-table">
      <thead>
        <tr>
          <th>CRN</th>
          <th>Course Name</th>
          <th>Professor</th>
          <th>Term</th>
          <th>Credits</th>
          <th>Major</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= course.CRN %></td>
            <td><%= course.class_name %></td>
            <td><%= course.professor %></td>
            <td><%= course.term %></td>
            <td><%= course.credits %></td>
            <td><%= course.major.present? ? course.major : "Not Provided" %></td>
            <td>
              <%= link_to "Enroll", enroll_course_path(course), method: :get, class: "enroll-button" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= link_to "Back", schedule_view_index_path, class: "back-button" %>
  </div>

  <div class="bottom-banner">
    <p>Footer Content Here</p>
  </div>
</div>